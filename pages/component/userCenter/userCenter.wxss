/* pages/userCenter/userCenter.wxss */
.coupon .main, .invite .main {
    padding-top: 30rpx;
}

.coupon {
    min-height: calc(100% - 20rpx);
    padding: 0 25rpx 20rpx;
    background: #f6f6f6;
}
.coupon .item {
    display: flex;
    position: relative;
    z-index: 9;
    padding: 30rpx 20rpx 30rpx 80rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
}
.coupon .expire {
    position:absolute;
    left:-60rpx;
    top:20rpx;
    width:200rpx;
    height:40rpx;
    text-align:center;
    line-height:40rpx;
    transform:rotate(-45deg);
    font-size:24rpx;
    color:#fff;
    background:#E84C3D;
}
.coupon .info {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: stretch;
    height: 130rpx;
    line-height: 65rpx;
    border-right: 2rpx dashed #ffd1a7;
    font-size: 0; 
    vertical-align: top;
}
.coupon .info-3 {
    line-height: 43rpx;
}
.coupon .info .type {
    width: 90%;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 32rpx;
    color: #202D33; 
}
.coupon .info .desc, .coupon .info .date {
    flex: 1;
    font-size: 24rpx;
    color: #879194; 
}
.coupon .discount {
    display: flex;
    flex-direction: column;
    width: 180rpx;
    height: 130rpx;
    text-align: center;
    font-size: 0;
}
.coupon .discount .rebate {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #e84c3d;
}
.coupon .discount .rebate-1 {
    height: 130rpx;
    line-height: 130rpx;
}
.coupon .discount .rebate text {
    display: inline-block;
    font-size: 70rpx;
}
.coupon .discount .use {
    width:130rpx;
    height:46rpx;
    line-height: 46rpx;
    margin: 2rpx auto;
    font-size: 24rpx;
    color: #fff;
    background:rgba(234,75,54,1);
    border-radius:23rpx;
}
.coupon .bg {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}
.coupon .bg image {
    width: auto;
    height: 200rpx;
}
.coupon .bg .l, .coupon .bg .r {
    width: 50rpx;
}
.coupon .bg .c {
    flex: 1;
}
.empty {
    display: block;
    height: 100%;
    text-align: center;
    font-size: 32rpx;
    color: #879193;
}
.empty-bg {
    display: block;
    width: 100%;
    height: 250rpx;
    padding: 200rpx 0 50rpx; 
}