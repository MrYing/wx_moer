/* pages/detail/detail.wxss */
@import "/plugin/wxParse/wxParse.wxss";
.no-scroll {
    position: fixed;
    z-index: 0;
    top:0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.detail {
    padding: 0 25rpx;
    height: 100%;
}
.detail .title {
    display: block;
    padding-top: 30rpx;
    line-height: 60rpx;
    font-size: 50rpx;
    word-break:break-all;
}
.detail .info {
    height: 24rpx;
    margin: 20rpx 0 0;
    font-size: 0;
    line-height: 24rpx;
    color: #879193;
    overflow: hidden;
}
.detail .amount {
    display: inline-block;
    height: 24rpx;
    font-size: 24rpx;
    padding-right: 16rpx;
    vertical-align: top;
}
.detail .amount image {
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
    border-radius: 100%;
    vertical-align: top;
}
.detail .date {
    display: inline-block;
    height: 24rpx;
    font-size: 24rpx;
}
.detail .date::before {
    content: '';
    display: inline-block;
    width: 8rpx;
    height: 8rpx;
    margin: -4rpx 10rpx 0 0;
    background: #879193;
    border-radius: 100%;
    vertical-align: middle;
}
.detail .view {
    display: inline-block;
    height: 24rpx;
    padding-right: 16rpx;
    font-size: 24rpx;
    text-align: right;
}
.detail .tips {
    padding: 20rpx;
    margin-top: 40rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #485359;
    background: #f2f2f2;
}
.detail .main {
    padding-top: 70rpx;
    font-size: 34rpx;
    line-height: 60rpx;
    font-weight: normal;
    word-wrap: break-word; 
    white-space:pre-wrap; 
    color: #202d33;
}
.detail .main .p {
    margin: 20rpx 0;
}
.detail .main image {
    display: block;
    width: 100%;
    margin: 40rpx auto;
}
.updateMain {
    border-bottom: 2rpx solid #dedede;
    margin-bottom: 60rpx;
}
.detail .main .updateTime {
    margin-bottom: 40rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #859193;
}
.detail .warn {
    padding: 70rpx 0 170rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #e84c3d;
}
.detail .warn image {
    display: inline-block;
    width: 19rpx;
    height: 19rpx;
}

.detail .operate {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    background: #fff;
    box-shadow: 0 -10rpx 10rpx rgba(50,50,50,0.1);
}
.detail .operate button {
    display: inline-block;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0;
    margin: 24rpx 0 0;
    font-size: 0;
    border-radius: 0;
    background: #fff;
    vertical-align: top;
}
.detail .operate .item {
    flex: 1;
    font-size: 0;
    text-align: center;
}
.detail .operate .item text {
    display: inline-block;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #879193;
    vertical-align: top;
}
.detail .operate .operate-zan button {
    border-right: 2rpx solid #dedede;
}
.detail .operate .img {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx 0 0;
    vertical-align: top;
}

.access {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 200rpx 0 0;
    font-size: 0;
    color: #5193ad;
    text-align: center;
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,0.9) 35%,rgba(255,255,255,0.98) 40%,rgba(255,255,255,1) 100%);
}
.access .access-main {
    min-height: 140rpx;
    padding: 120rpx 0 30rpx;
}
.access .btn {
    width: 40%;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0;
    border: 2rpx solid #5193ad;
    margin-bottom: 25rpx;
    font-size: 30rpx;
    border-radius: 70rpx;
    color: #5193ad;
    background: none;
}
.access .btn view {
    display: inline-block;
    max-width: 45%;
    height: 70rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    vertical-align: top;
}
.access .btn text {
    display: inline-block;
    padding: 0 4rpx;
    font-size: 16rpx;
    vertical-align: top;
}
.access .btn-buy {
    color: #e84c3d;
    border-color: #e84c3d;
}
.access .remind {
    font-size: 24rpx;
    color: #5193ad;
}
.access .remind image {
    display: inline-block;
    width: 22rpx;
    height: 20rpx;
    margin-right: 10rpx;
}
.access .access-info {
    display: flex;
    padding: 0 0 40rpx;
    font-size: 26rpx;
    height: 26rpx;
    line-height: 26rpx;
    color: #879194;
}
.access .access-info text {
    flex: 1;
    border-right: 2rpx solid #ddd;
}
.access .access-info text:last-child {
    border: 0;
}

