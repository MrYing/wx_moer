.goHome {
    position: fixed;
    right: 35rpx;
    bottom: 420rpx;
}
.goHome.active::before {
    display: block;
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    margin: 16rpx;
    content: '';
    border-radius: 100%;
    background: rgba(100,100,100,0.2);
}
.goHome image {
    width: 132rpx;
    height: 132rpx;
}

.contact {
    position: fixed;
    right: 30rpx;
    bottom: 250rpx;
    z-index: 9;
    padding: 0;
    background: none;
}
.contact image{
    width: 130rpx;
    height: 100rpx;
}

.goLive {
    position: fixed;
    right: 40rpx;
    bottom: 250rpx;
    z-index: 9;
    padding: 0;
    font-size: 0;
    text-align: center;
    background: none;
}
.goLive image{
    width: 94rpx;
    height: 80rpx;
}
.goLive .join {
    height: 36rpx;
    line-height: 34rpx;
    padding: 0 15rpx;
    margin-top: -4rpx;
    background: rgba(11,21,26,1);
    opacity: 0.8;
    border-radius: 18rpx;
    font-size: 18rpx;
    color: #fff;
}

.mask {
  width: 100%;
  height: 0;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
  transition: opacity 0.6s ease;
}
.mask.active {
    height: 100%;
    opacity: 0.4;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 25%;
  left: calc((100% - 600rpx)/2);
  z-index: 9999;
  font-size: 0;
  border-radius: 20rpx;
}
.modal-head {
    width: 600rpx;
    height: 348rpx;
}
.modal-content {
    padding: 40rpx 32rpx;
    background: #fff;
}
.modal-title {
    line-height: 34rpx;
    font-size: 34rpx;
    color: #202d33;
    text-align: center;
}
.modal-desc {
    padding-top: 20rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    color: #879193;
    text-align: center;
}
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 89rpx;
    border-top: 2rpx solid #dedede;
    font-size: 32rpx;
    background: #fff;
}
.btn-cancel {
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    color: #879193;
    text-align: center;
    border-right: 2rpx solid #dedede;
}
.btn-confirm {
    flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 20rpx;
    color: #e84c3d;
    text-align: center;
    font-size: 32rpx;
    background: #fff;
}

/* 底部点赞转发按钮 适配iPhone X */
.detail .isIphoneX {
    height: 130rpx;
